<h1>Welcome!</h1>
<% if !session[:validated] %>
  <h3>For full functionality please enter the team password below!</h3>

  <%= form_with url: "/teams/1", method: :patch, local: true do |f|  %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit 'Submit Team Password' %>
  <% end %>
<% else %>
  <%= link_to 'Create an Account', new_user_path %>
<% end %>
<br/>
